<div class="navbar-body">
	<div class="logo">
		<h2 class="navbar-title">Prototipo</h2>
		<div class="navbar-button" onclick="openMenu()">
			<%= image_tag "menu.svg", :class => "img" %>
		</div>
	</div>

	<div class="menu" data-menu="">
		<div class="floatright-desktop" data-link="">
			<div class="navbar-menu">
				<a href="#MAIN" class="link">Banner</a>
			</div>
			<div class="navbar-menu">
				<a href="#CONTACT" class="link">Main</a>
			</div>
			<div class="navbar-menu">
				<a href="#FOOTER" class="link">Footer</a>
			</div>
		</div>
